<div class="modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            {{#if headerText}}
                <div class="modal-header">
                    <h3>{{headerText}}</h3>
                </div>
                <div class="modal-body">
            {{else}}
                <div class="modal-body">
                <br>
            {{/if}}

                <p>{{{bodyText}}}</p>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-default center-block js-modalOk" style="display:block;">Ok</button>
            </div>
        </div>
    </div>
</div>